//variables
color-3 = rgba(90, 39, 115, 0.7)  //purple pack
color-4 = #F88977 //red
google-color = #EB4537
facebook-color = #4267b2
twitter-color = #1da1f2

html, body
  width 100%
  height 100%

.content-login
  height 100%
  display flex
  .login-panel, .preview-panel
    left: 0;
    right: 0;
    position: absolute;
    top 50%
    transform: translateY(-53%);
  .login-container
    position relative
    width 45%
    &__logo
      display: flex;
      height: 140px;
      align-items: center;
      max-width: 174px;
      margin: 0 auto;
      .fluflu
        max-width 70px
        animation: float 6s ease-in-out infinite;
      .login-container__fluany
        font-size 32px
        margin-left 5px
        letter-spacing: 4px;
        font-variant-ligatures: none;
        .flu
          color color-3
          font-weight 300
        .any
          color color-4
          font-weight 600
    .welcome-container
      max-width: 370px;
      margin: 0 auto;
      h1
        text-align center
        color color-3
        margin 16px 0
        font-size 40px
      p
        font-weight 300
        color #68688c
        font-size 16px
        text-align center
        line-height 24px
    .auth-content
      max-width 210px
      margin 0 auto
      h3
        text-align center
        color #515198
        font-size 16px
        margin 20px 0
      button
        position relative
        border none
        margin-bottom 15px
        cursor pointer
        border-radius 4px
        padding 14px 0
        width 100%
        color #FFF
        font-size 14px
        font-weight 600
        transition all .3s
        &:before
          content ""
          background-position center
          background-size 20px
          width 44px
          height 44px
          position absolute
          left 10px
          top 0 
      &__google
        background google-color
        &:before
          background url('../images/google-icon.svg') no-repeat
      &__facebook
        background facebook-color
        &:before
          background url('../images/facebook-icon.svg') no-repeat
      &__twitter
        background twitter-color
        &:before
          background url('../images/twitter-icon.svg') no-repeat

  .preview-container
    width 55%
    position relative
    background url('../images/review-cover.png') no-repeat
    background-size cover
    text-align center
    .preview-panel
      margin-top 50px
    h2
      font-size 32px
      text-align center
      text-transform uppercase
      color #FFF
      font-weight 300
      max-width 490px
      line-height 40px
      margin 0 auto
    img
      max-width 95%
      max-height 390px
      margin-top 20px