.profile
  margin-left 14px
  cursor pointer
  width 50px
  position relative
  float right
  &-image
    border-radius 100%
    width 30px
  &:after
    content ""
    width 3px
    height 9px
    background color-2
    position absolute
    right 4px
    top 12px
    transform rotate(45deg)
  &:before
    content ""
    width 3px
    height 9px
    background color-2
    position absolute
    right 9px
    top 12px
    transform rotate(-45deg)
  &-menu
    position absolute
    z-index 10
    width 128px
    background #FFF
    border-radius 4px
    padding-top 10px
    right 0
    top 40px
    border 1px solid #e4e4e4
    &:before
      content ""
      width 10px
      height 10px
      background #FFF
      border-top 1px solid #e4e4e4
      border-left 1px solid #e4e4e4
      position absolute
      top -6px
      right 27px
      transform rotate(45deg)
  &-menu__hello
    border-bottom 1px solid #e4e4e4
    padding 5px 10px
    h4
      margin 0
      color color-2
    p
      margin 3px 0
      color #bdbdbd
  &-menu__item
    padding 10px
    display block
    border-bottom 1px solid #e4e4e4
    text-decoration none
    color #bdbdbd
    position relative
    font-weight bold
    padding-left 38px
    svg
      width 18px
      height 18px
      position absolute
      left 10px
      top 8px
      &.bug-icon
        width 15px
    &:last-child
      border none
